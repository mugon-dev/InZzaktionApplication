<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fffafa"
    tools:context=".ui.write.WriteFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#11595050"
            android:width="250dp"
            android:textSize="30dp"
            android:layout_marginLeft="15dp"
            android:ems="30"
            android:hint="검색"
            android:textStyle="italic"
            android:inputType="textPersonName"
            android:text="" />


        <ImageView
            android:id="@+id/listSearch"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/smartphone" />

        <Button
            android:id="@+id/btnCreateNote"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="26dp"
            android:background="#F3EECD"
            android:textStyle="bold"
            android:text="새 글"
            android:textColor="#020202" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"

        >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FDD9D9"
            android:height="25sp"
            android:width="200dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#070707"
            android:textStyle="bold"
            android:text="제목" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FDD9D9"
            android:width="200dp"
            android:height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#070707"
            android:textStyle="bold"
            android:text="태그" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/linearM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/menubar" />
    </LinearLayout>
</LinearLayout>